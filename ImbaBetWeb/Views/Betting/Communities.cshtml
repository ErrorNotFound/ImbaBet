@model IEnumerable<Community>

@{
    ViewData["Title"] = "Communities";
}
<h1>@ViewData["Title"]</h1>
<br/>

@foreach (var community in Model)
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayFor(modelItem => community.Name)
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var player in community.Members)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => player)
                    </td>
                    <td>
                        <i>@(community.Owner.Id == player.Id ? "Owner" : "Member")</i>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

